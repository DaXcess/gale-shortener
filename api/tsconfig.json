{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    }
}